<div class="modal fade" id="IndexTrainings" tabindex="-1" role="dialog" aria-labelledby="IndexTrainingsLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title text-center green" id="IndexTrainingslLabel">Ravi de vous voir parmi nous !</h2>
        <h3 class="modal-title text-center">A quelle date souhaitez-vous vous inscrire ?</h3>
      </div>
      <div class="modal-body flex-content space-around">
        <% if current_user %>
          <% @next_trainings.each do |training| %>
            <% if @available_trainings.include?(training) && training.location %>
              <%= link_to "#{l(training.date, format: '%A %d %B, à %Hh%M').capitalize}<br />#{training.location.name}<br />#{training.location.address}".html_safe , bookings_path(training: training, city: @city), method: :post, remote: true, class: "btn-success btn custom-bootstap-btn text-center mi-spaced", id: "training-#{training.id}" %>
            <% elsif @available_trainings.include?(training) %>
              <%= link_to l(training.date, format: '%A %d %B, à %Hh%M').capitalize, bookings_path(training: training, city: @city), method: :post, remote: true, class: "btn-success btn custom-bootstap-btn text-center mi-spaced", id: "training-#{training.id}" %>
            <% else %>
              <h4 class="text-center green"><%= l(training.date, format: '%A %d %B, à %Hh%M').capitalize %> : Déjà réservé <i class="fa fa-check" aria-hidden="true"></i></h3>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>