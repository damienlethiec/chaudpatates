<div class="wrapper-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="form-card">
          <h2>Editer mon profil</h2>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
           <%= f.input :email, required: true, autofocus: true %>

           <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
           <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
           <% end %>

           <%= f.input :password, autocomplete: "off", hint: "ne rien indiqué si vous souhaitez garder le même mot de passe", required: false %>
           <%= f.input :password_confirmation, required: false %>
           <%= f.input :current_password, hint: "nous avons besoin de votre mot de passe actuel pour confirmer ces changements", required: true %>
         </div>
         <div class="form-actions">
          <%= f.button :submit, "Editer mon profil", class: "btn-validate btn-success btn" %>
        </div>
        <% end %>
        <br>
        <h3>Supprimer mon compte?</h3>

        <p>Unhappy? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Revenir en arrière", :back %>
      </div>
    </div>
  </div>
</div>
