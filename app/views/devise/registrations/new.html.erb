<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="form-card">
        <h2 class="text-center">S'inscrire</h2>
        <p class="text-center">Chaudpatate à votre service : accédez aux meilleurs coachs, rencontrez des gens dans contexte sportif, vivez d'incroyables expériences et restez toujours motivé.</p>
        <%= link_to omniauth_authorize_path(resource_name, :linkedin), class: "socialbox linkedin" do %>
          <div id="linkedin-button">
            <i class="icon"><i class="fa fa-fw fa-linkedin"></i></i>
            <div class="slide">
              <p>S'inscrire avec Linkedin</p>
            </div>
          </div>
        <% end %>
        <h3>
          <div>OU</div>
        </h3>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name, required: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.button :submit, "Créer un compte", class: "btn-validate btn-success btn" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
