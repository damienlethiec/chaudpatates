<div class="wrapper-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="form-card">
          <h2>Changer votre mot de passe</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true %>
            <%= f.input :password_confirmation, label: "Confirmer votre nouveau mot de passe", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Changer votre mot de passe", class: "btn-validate btn-success btn" %>
          </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
