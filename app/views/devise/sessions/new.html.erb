<div class="wrapper-gray">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
				<div class="form-card">
					<h2 class="text-center">Se connecter</h2>
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  					<%= f.error_notification %>
						<%= f.input :email, required: false, label: false, tofocus: true, placeholder: "E-mail" %>
						<%= f.input :password, required: false, label: false, placeholder: "Mot de passe" %>
						<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <p class="agreements text-center">En vous connectant, vous acceptez de vous conformer à la Politique de confidentialité et aux Conditions générales de Chaudpatate.</p>
							<%= f.button :submit, "Se connecter", class: "btn-validate btn-success btn" %>
					<% end %>
					<%= link_to omniauth_authorize_path(resource_name, :linkedin), class: "socialbox linkedin" do %>
						<div id="linkedin-button">
							<i class="icon">
								<i class="fa fa-fw fa-linkedin"></i>
							</i>
							<div class="slide">
								<p>
									Se connecter via Linkedin
								</p>
							</div>
						</div>
					<% end %>
					<br>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>
